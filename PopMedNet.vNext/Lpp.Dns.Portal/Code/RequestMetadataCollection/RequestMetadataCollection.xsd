                                  </xs:complexType>
                                </xs:element>
                                <xs:element name="observationRange">
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element name="startDate" type="xs:dateTime" />
                                      <xs:element name="endDate" type="xs:dateTime" />
                                    </xs:sequence>
                                  </xs:complexType>
                                </xs:element>
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="report">
