@section Head {  
<script src="~/js/Home/RestorePassword.js"></script>
}
<div class="panel panel-default" style="width:65%;margin:8px auto;">
    <div class="panel-heading">
        <h3>Please enter your new password</h3>
    </div>
    <div class="panel-body">
        <p class="alert alert-info" role="alert">
            Passwords must contain at least one number, one capital letter and one symbol.
        </p>
    <form>
        <fieldset>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="txtPassword">New Password</label>
                    <input type="password" id="txtPassword" name="NewPassword" autocomplete="off" data-bind="value: Password, valueUpdate: 'input'" class="form-control" title="Your new password is required" required maxlength="20" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuemin="0" aria-valuemax="5" data-bind="attr:{ 'aria-valuenow': PasswordScore() }, style: {width: (PasswordScore() * 20) + '%'}, css: { 'progress-bar-danger': PasswordScore() <= 1, 'progress-bar-warning': PasswordScore() > 1 && PasswordScore() < 5, 'progress-bar-success': PasswordScore() == 5 }"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="txtConfirmPassword">Confirm Password</label>
                    <input type="password" id="txtConfirmPassword" name="ConfirmPassword" autocomplete="off" data-bind="value: ConfirmPassword, valueUpdate: 'input'" class="form-control" title="Confirm Password is required and must match the new password" required maxlength="20" />
                </div>
            </div>
        </fieldset>
    </form>
    </div>
    <nav class="panel-footer">
        <button id="btnSubmit" class="btn btn-success btn-sm" data-bind="click: Save, enabled: PasswordScore() > 4"><img src="@this.ResourceUrl("/images/Save24.png")" alt="Change Password" />Change Password</button>
        <button id="btnCancel" class="btn btn-warning btn-sm" data-bind="click: Cancel"><img src="@this.ResourceUrl("/images/Cancel24.png")" alt="Cancel" />Cancel</button>
    </nav>
</div>


