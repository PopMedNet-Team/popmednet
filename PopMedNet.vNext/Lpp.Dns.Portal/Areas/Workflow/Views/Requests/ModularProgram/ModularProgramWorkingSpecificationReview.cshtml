<script src="/areas/workflow/js/requests/modularprogram/workingspecificationreview.js"></script>
<!-- ko stopBinding:true -->

<section id="MPWorkingSpecificationReview" style="margin-top:5px;">

    <article class="panel panel-default">

        <div class="panel-heading">
            <h4 class="panel-title">Uploaded Specifications</h4>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered" style="width: 100%;">
                <colgroup>
                    <col style="vertical-align: middle;" />
                    <col style="width: 120px; vertical-align: middle;" />
                    <col style="width:40px" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="bold">File Name</th>
                        <th class="bold" style="text-align:center;">Size</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: { data:Documents, as:'file'}">
                    <tr>
                        <td data-bind="text:file.FileName"></td>
                        <td data-bind="text:Global.Helpers.formatFileSize(file.Length)" style="text-align:right;"></td>
                        <td>
                            <a class="btn btn-primary" style="padding:3px 6px;" data-bind="attr:{href:Workflow.ModularProgram.WorkingSpecificationReview.Utils.buildDownloadUrl(file.ID, file.FileName)}" title="Click to download."><span class="glyphicon glyphicon-download-alt"></span></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>

    <nav>        
        <button class="btn btn-primary pull-right" style="width:115px;" data-resultid="982C4DCC-AB1C-4F87-83BB-E09FA8270C17" data-bind="visible:HasPermission(PMNPermissions.ProjectRequestTypeWorkflowActivities.CloseTask),click:Complete">Approve</button>        
        <button class="btn btn-primary pull-right" style="margin-right:15px;" data-resultid="A95899AC-F4F6-41AB-AD4B-D41E05563486" data-bind="visible:HasPermission(PMNPermissions.ProjectRequestTypeWorkflowActivities.CloseTask),click:Complete">Return for Revision</button>
        
        @*<button class="btn btn-primary pull-right" style="margin-right: 15px;width:110px;" data-bind="click: RequestForm">Request Form</button>*@
    </nav>
</section>
<!-- /ko -->