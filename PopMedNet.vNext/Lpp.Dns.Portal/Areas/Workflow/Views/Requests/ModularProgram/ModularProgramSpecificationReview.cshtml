<script src="/areas/workflow/js/requests/modularprogram/specificationreview.js"></script>
<!-- ko stopBinding:true -->
<section id="MPSpecificationReview" style="margin-top:15px;">
    <article class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Uploaded Specifications</h4>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered" style="width: 100%;">
                <colgroup>
                    <col style="width: 60%; vertical-align: middle;" />
                    <col style="width: 90px; vertical-align: middle;" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="bold">File Name</th>
                        <th class="bold" style="text-align:center;">Size</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: { data:Documents, as:'file'}">
                    <tr>
                        <td><a data-bind="text:file.FileName, attr:{ href: Controls.WFDocuments.List.Utils.buildDownloadUrl(file.ID, file.FileName) }"></a></td>
                        <td data-bind="text:Global.Helpers.formatFileSize(file.Length)" style="text-align:right;"></td>
                    </tr>
                </tbody>
            </table>

        </div>

    </article>
    <nav>
        <button class="btn btn-primary pull-right" data-resultid="74294C54-05C2-4F97-BA35-FAC7C7E6F61A" data-bind="visible:HasPermission(PMNPermissions.ProjectRequestTypeWorkflowActivities.CloseTask),click:Complete" style="width:115px;">Approve</button>
        <button class="btn btn-primary pull-right" data-resultid="AD6A9E17-936F-431A-A5D6-97B37B7C0796" data-bind="visible:HasPermission(PMNPermissions.ProjectRequestTypeWorkflowActivities.CloseTask),click:Complete" style="margin-right:15px;">Return for Revision</button>
        @*<button class="btn btn-primary pull-right" style="margin-right: 15px;width:110px;" data-bind="click: RequestForm">Request Form</button>*@
        <div class="clearfix"></div>
    </nav>

</section>
<!-- /ko -->