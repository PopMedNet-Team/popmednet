@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.VisitsID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p> 
    <div class="row row-noborder">
        <div class="col-sm-4 bold"><h4 id="lblVisits" class="TermHeader bold">Minimum # Visits<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6 form-group">
            <input id="neVisits" type="number" name="Visits" aria-labelledby="lblVisits" maxlength="3" data-bind="kendoNumericTextBox: {value: Values().Visits, min: 0, max: 200, decimals: 0, format: 'n0'},attr:{ required: $component.Options.IsTemplateEdit == false }" min="0" max="200" style="width: 100px;" validationmessage="The minimum number of visits must be specified" />
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteVisitsTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>

