@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_Race">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-3 bold"><h4 id="Race" class="TermHeader bold">Race<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-7 form-group">
            <div class="checkbox">
                <label><input type="checkbox" data-bind="CheckAllCheckboxExtender:{ valuesCollection: Values().Races, allValues:['0','1','2','3','4','5','6'] }" />Select All</label>
            </div>
            <div style="border-bottom: solid; border-width: 1px; width: 280px; padding-left:0; margin-left:-50px; border-bottom-color: lightgray;"></div>
            <div id="AllRaces">
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="0" id="Unknown" />Unknown</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="1" id="AmericanIndianOrAlaskaNative" />American Indian/Alaska Native</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="2" id="Asian" />Asian</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="3" id="BlackOrAfricanAmerican" />Black/African American</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="4" id="NativeHawaiianOrOtherPacificIslander" />Native Hawaiian/Pacific Islander</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="5" id="White" />White</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Races" value="6" id="Missing" />Missing</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteRaceTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>