@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_DispensingRXSupply">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-3 bold"><h4 id="DispensingRXSupply" class="TermHeader bold">Dispensing RX Supply<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-7 form-group">
            <div class="checkbox">
                <label><input type="checkbox" data-bind="CheckAllCheckboxExtender:{ valuesCollection: Values().RXSupply, allValues:['0','1','2','3','4','5','6','7'] }"/>Select All</label>
            </div>
            <div style="border-bottom: solid; border-width: 1px; width: 280px; padding-left:0; margin-left:-50px; border-bottom-color: lightgray;"></div>
            <div id="AllDispensingRXSupplies">
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="0" id="rxLessThanZero" />&lt;0</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="1" id="rxSupZero" />0-1</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="2" id="rxSupTwo" />2-30</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="3" id="rxSupThirty" />31-60</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="4" id="rxSupSixty" />61-90</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="5" id="rxSupNinety" />&gt;90</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().RXSupply" value="7" id="rxSupMissing" />Missing</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteDispensingRXSupplyTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>