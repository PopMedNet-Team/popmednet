@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_SexDistribution">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-3 bold"><h4 id="SexDistribution" class="TermHeader bold">Sex Distribution<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-7 form-group">
            <div class="checkbox">
                <label><input type="checkbox" data-bind="CheckAllCheckboxExtender:{ valuesCollection: Values().SexDistributions, allValues:['0','1','2','3','4','5','6','7'] }" />Select All</label>
            </div>
            <div style="border-bottom: solid; border-width: 1px; width: 280px; padding-left:0; margin-left:-50px; border-bottom-color: lightgray;"></div>
            <div id="SexDistributionGrid">
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="0" id="sexAmbiguous" />Ambiguous</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="1" id="sexFemale" />Female</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="2" id="sexMale" />Male</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="3" id="sexNoInformation" />No Information</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="4" id="sexNullOrMissing" />NULL or Missing</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="5" id="sexOther" />Other</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="6" id="sexUnknown" />Unknown</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().SexDistributions" value="7" id="sexValuesOutsideOfCdmSpecifications" />Values Outside of CDM Specifications</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteSexDistributionTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>