@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_Encounter">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-3 bold"><h4 id="EncounterType" class="TermHeader bold">Encounter Type<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-7 form-group">
            <div class="checkbox">
                <label><input type="checkbox" data-bind="CheckAllCheckboxExtender:{ valuesCollection: Values().Encounters, allValues:['ALL','AV','ED','IP','IS','OA','MISSING'] }" />Select All</label>
            </div>
            <div style="border-bottom: solid; border-width: 1px; width: 280px; padding-left:0; margin-left:-50px; border-bottom-color: lightgray;"></div>
            <div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="ALL" id="encounterAll" />All</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="AV" id="encounterAmbulatoryVisit" />Ambulatory Visit (AV)</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="ED" id="encounterEmergencyDepartment" />Emergency Department (ED)</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="IP" id="encounterInpatientHospitalStay" />Inpatient Hospital Stay (IP)</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="IS" id="encounterNonAcuteInstitutionalStay" />Non-Acute Institutional Stay (IS)</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="OA" id="encounterOther" />Other Ambulatory Visit (OA)</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" data-bind="checked: Values().Encounters" value="MISSING" id="encounterMissing" />Missing</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteEncounterTypeTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
    
</script>

