@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.RaceID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-4 bold"><h4 id="lblRace" class="TermHeader bold">Race<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6 form-group" data-bind="foreach: Dns.Enums.RaceTranslation">
            <div class="checkbox">
                <label>
                    <input type="checkbox" data-bind="value: value, checked: $parent.Values().Race" />
                    <span data-bind="text: Global.Helpers.GetEnumString(Dns.Enums.RaceTranslation, value)"></span>
                </label>
            </div>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteRaceTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>