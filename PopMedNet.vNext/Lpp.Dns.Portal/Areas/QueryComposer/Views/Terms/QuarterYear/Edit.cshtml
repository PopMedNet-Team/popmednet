@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.QuarterYearID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p> 
    <div class="row">
        <div class="col-sm-10 bold">
            <h4 class="TermHeader bold">Year/Quarter Observation Period<em data-bind="visible:Design.Locked" style="color:red">*</em></h4>
            <div style="margin-top:10px;margin-left:12px;">
                <label class="radio-inline"><input type="radio" value="ByQuarters" name="observationPeriodTypeSelector" data-bind="checked: Values().ByYearsOrQuarters" /> By Quarters</label>
                <label class="radio-inline"><input type="radio" value="ByYears" name="observationPeriodTypeSelector" data-bind="checked: Values().ByYearsOrQuarters" /> By Years</label>
            </div>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteYears" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-11 form-group">
            <div class="form-group col-sm-3">
                <label for="neStartYearQ" style="display:block;">Start</label>
                <input maxlength="4" id="neStartYearQ" data-bind="kendoNumericTextBox: {value: Values().StartYear, min: 1800, max: 9999, decimals: 0, format: '0000'}" style="width: 100px;">
            </div>
            <div class="form-group col-sm-3" data-bind="visible:Values().ByYearsOrQuarters() == 'ByQuarters'">
                <label for="cbStartQuarter">Start Quarter</label>
                <div id="cbStartQuarter" data-bind="kendoDropDownList: { value: Values().StartQuarter, data: Plugins.Requests.QueryBuilder.YearlyQuarters}" style="width: 100px"></div>
            </div>
            <div class="form-group col-sm-3">
                <label for="neEndYearQ" style="display:block;">End</label>
                <input maxlength="4" id="neEndYearQ" data-bind="kendoNumericTextBox: {value: Values().EndYear, min: 1800, max: 9999, decimals: 0, format: '0000'}" style="width: 100px;">
            </div>
            <div class="form-group col-sm-3" data-bind="visible:Values().ByYearsOrQuarters() == 'ByQuarters'">
                <label for="cbEndQuarter">End Quarter</label>
                <div id="cbEndQuarter" data-bind="kendoDropDownList: { value: Values().EndQuarter, data: Plugins.Requests.QueryBuilder.YearlyQuarters }" style="width: 100px;"></div>
            </div>
        </div>
    </div>
</script>
