@{
    ViewBag.Title = "Details";
}

@section Head {
    <style>
        .tab-body {
            min-height: 500px;
        }
    </style>
}

    @section Scripts{
    <script type="module" src="@Url.Content("~/js/Security/AclViewModel.js")"></script>
    <script type="module" src="@Url.Content("~/js/Events/EditEventPermissions.js")"></script>
    <script type="module" src="@Url.Content("~/js/groups/details.js")"></script>
}

<article class="panel panel-default" data-bind="css: {visible: true}">
    <!-- forcing visible as MainMenu appear to create a problem -->
    <div class="panel-heading">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/groups">Groups</a></li>
            <li class="active" data-bind="text: Group.Name"></li>
        </ol>
    </div>

    <div class="panel-body">
        <form class="form" role="form">
            <div class="row">
                <div class="col-md-5 form-group">
                    <label for="txtName">Group Name<em>*</em></label>
                    <input type="text" id="txtName" class="form-control" required maxlength="255" title="Please enter a name" data-bind="value: Group.Name" />
                </div>
            </div>
        </form>
        <div id="tabs" data-bind="kendoTabStrip: {}" style="min-height: 500px;">
            <ul>
                <li class="k-state-active">Organizations</li>
                <li>Projects</li>
                <li data-bind="visible: CanManageSecurity">Permissions</li>
                <li data-bind="visible: CanManageSecurity">Events</li>
            </ul>
            <div class="tab-body overflow-visible">
                <!-- Organizations -->
                <div class="table-responsive" style="overflow: visible;">
                    <table class="table table-striped table-bordered" style="width: 100%;">
                        <colgroup>
                            <col style="width: 100%; vertical-align: middle;" />
                            <col style="width: 80px;" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="bold">Name</th>
                                <th class="bold center">X</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: OrganizationGroups">
                            <tr>
                                <td style="white-space: nowrap;" data-bind="text: Organization"></td>
                                <td><button class="btn btn-danger btn-xs" data-bind="click: $root.RemoveOrganization.bind($root, $data)">Remove</button></td>
                            </tr>
                        </tbody>
                        <tfoot class="panel-footer">
                            <tr>
                                <td colspan="2">
                                    <div class="pull-right">
                                        <div class="dropdown">
                                            <a href="#" id="btnAddOrganization" role="button" class="dropdown-toggle btn btn-default" data-toggle="dropdown" data-bind="disable: $root.AddableOrganizationList().length == 0"><img src="@Url.Content("~/images/Add16.png")" alt="Add Organzation" />&nbsp;Add Organization to Group <strong class="caret"></strong></a>
                                            <ul class="dropdown-menu" data-bind="foreach: $root.AddableOrganizationList">
                                                <li>
                                                    <a href="#" data-bind="click: $root.AddOrganization.bind($root, $data), attr: {id: ID}">
                                                        <span data-bind="text: Name"></span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="tab-body">
                <!-- Projects -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" style="width: 100%;">
                        <colgroup>
                            <col style="width: 100%; vertical-align: middle;" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="bold">Name</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: GroupProjects">
                            <tr>
                                <td><a data-bind="text: Name, href: '/projects/details?ID='+ ID()"></a></td>
                            </tr>
                        </tbody>
                        <tfoot class="panel-footer">
                            <tr>
                                <td>
                                    <button class="btn btn-default pull-right" style="margin-right: 4px;" id="btnCreateProject" data-bind="enable: Group.ID() != null, visible: CanCreateProject, click: CreateProject"><img src="@Url.Content("~/images/Add16.png")" alt="Create Project" />Create Project</button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="tab-body">
                <br />
                <p class="alert alert-info">
                    Rights in this panel determine who may access and modify this group.
                </p>
                <!-- Permissions -->
                <div data-bind="with: GroupSecurity">
                    <partial name="~/Views/Security/EditAcl.cshtml" />
                </div>
            </div>
            <div class="tab-body">
                <!--Events-->
                <br />
                <p class="alert alert-info">
                    This allows you to control events that will be fired against the Group and who will receive them.
                </p>
                <div data-bind="with: Events">
                    <partial name="~/Views/Events/EditEventPermissions.cshtml" />
                </div>
            </div>

        </div>
    </div>
    <nav class="panel-footer right">
        <button class="btn btn-danger btn-sm pull-right" id="btnDelete" data-bind="click: Delete, visible: CanDeleteGroup" style="margin-left: 30px;"><img src="@Url.Content("~/images/Delete24.png")" alt="Delete" />Delete</button>
        <button class="btn btn-warning btn-sm pull-right" id="btnCancel" data-bind="click: Cancel" style="margin-left: 10px;"><img src="@Url.Content("~/images/Cancel24.png")" alt="Cancel" />Cancel</button>
        <button class="btn btn-success btn-sm pull-right" id="btnSave" data-bind="click: Save, visible: CanEditGroup"><img src="@Url.Content("~/images/Save24.png")" alt="Save" />Save</button>
        <br class="clear" />
    </nav>
</article>
