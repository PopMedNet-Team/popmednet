@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
}

<fieldset id="ForgotPassword" style="display: none;" data-bind="visible: true">
    <legend style="display: none;"></legend>
    <p class="alert alert-info"><strong>INSTRUCTIONS:</strong> Please enter your Username or Email. A new password will be sent to your registered email upon clicking "Send".</p>
    <br />
    <section style="width:400px;margin:auto;">
        <div class="form-group">
            <label for="txtUserName">Username:</label>
            <input type="text" id="txtUserName" class="form-control" maxlength="50" data-bind="value: Request.UserName" />
        </div>
        <p style="text-align:center;font-weight:bold;">OR</p>
        <div class="form-group">
            <label for="txtEmail">Email:</label>
            <input type="email" id="txtEmail" class="form-control" maxlength="255" data-bind="value: Request.Email" />
        </div>
    </section>
    <nav class="footer">
        <button id="btnSend" class="btn btn-success btn-sm" data-bind="click: Send">Send</button>&nbsp;&nbsp;
        <button id="btnCancel" class="btn btn-warning btn-sm" data-bind="click: Close">Cancel</button>
    </nav>
</fieldset>

<script src="~/js/Account/ForgotPassword.js"></script>
<script>
    $(function() {
        Account.ForgotPassword.init($("#ForgotPassword"));
    });
</script>