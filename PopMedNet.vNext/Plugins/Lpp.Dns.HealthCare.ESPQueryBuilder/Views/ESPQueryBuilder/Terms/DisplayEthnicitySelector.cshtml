@model Lpp.Dns.HealthCare.ESPQueryBuilder.Models.ESPQueryViewModel
 @{
    Layout = null;
} 
<div class="RaceSelectorTerm Term panel panel-default">
    <div class="panel-heading">
        Race-Ethnicity
    </div>
    <div class="panel-body">
        <ul class="list-group">
        @Html.Raw( string.Join( "", 
            from rc in Model.Base.EthnicitySelections
            join id in (Model.Base.Ethnicity??"").Split(',') on rc.StratificationCategoryId.ToString() equals id
            select "<li class='list-group-item'>" + rc.CategoryText + "</li>"))
        </ul>
    </div>
</div>
