<section id="CommonReviewFinalReport" style="margin-top:15px;">
    <article class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Review Final Report</h4>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered" style="width: 100%;">
                <colgroup>
                    <col style="width: 60%; vertical-align: middle;" />
                    <col style="width: 90px; vertical-align: middle;" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="bold">File Name</th>
                        <th class="bold" style="text-align:center;">Size</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: { data:Documents, as:'file'}">
                    <tr>
                        <td><a data-bind="text:file.FileName, attr:{ href: Controls.WFDocuments.List.Utils.buildDownloadUrl(file.ID, file.FileName) }"></a></td>
                        <td data-bind="text:Global.Helpers.formatFileSize(file.Length)" style="text-align:right;"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
    <nav>        
        <button class="btn btn-primary pull-right" data-resultid="0811D461-626F-4CCF-B1FA-5B495858C67D" data-bind="click:Complete, visible:HasPermission(Permissions.ProjectRequestTypeWorkflowActivities.CloseTask)" style="width:110px;">Approve</button>        
        <button class="btn btn-primary pull-right" data-resultid="2AFFB9A9-3BC1-4039-ADD9-FE809C81C800" data-bind="click:Complete, visible:HasPermission(Permissions.ProjectRequestTypeWorkflowActivities.CloseTask)" style="margin-right:15px;">Return for Revision</button>
    </nav>
</section>
