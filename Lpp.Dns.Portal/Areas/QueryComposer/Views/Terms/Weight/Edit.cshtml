@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.WeightID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p> 
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Weight Range <em data-bind="visible:Design.Locked" style="color:red">*</em><br/>(in pounds)</h4></div>
        <div class="col-sm-2 form-group">
            <label id="lblWeightMin" for="neWeightMin">Min</label>
            <input id="neWeightMin" name="lblWeightMin" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().WeightMin, min: 1, max: 999, decimals: 2, format: 'n2'}" min="1" max="999" style="width: 100px;">
        </div>
        <div class="col-sm-2 form-group">
            <label id="lblWeightMax" for="neWeightMaxx">Max</label>
            <input id="neWeightMax" name="WeightMax" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().WeightMax, min: 1, max: 999, decimals: 2, format: 'n2'}" min="1" max="999" style="width: 100px;">
        </div>
        <div class="col-sm-2 col-sm-offset-4">
            <button id="btnDeleteWeightTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>
