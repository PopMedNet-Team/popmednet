
@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.LOINCCodesID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Lab: LOINC<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-8" style="padding-top:10px;">
            <label style="display:inline;">Code Set: LOINC</label>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-12 form-group">
            <label for="txtLOINCCodes">Selected Codes:</label>
            <textarea name="txtLOINCCodes" class="form-control" rows="3" data-bind="value:Values().CodeValues" title="&bull; separate multiple codes using a semi-colon" />
            <div>
                <label class="radio-inline">
                    <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.ExactMatch, checked:Values().SearchMethodType, attr:{ required: $component.Options.IsTemplateEdit == false, name: $parents[0].ID() + 'loinccodes_searchtype_' + $index() }" validationmessage="Select a search method type." /> Exact Match
                </label>
                &nbsp;
                <label class="radio-inline">
                    <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.StartsWith, checked:Values().SearchMethodType, attr:{ name: $parents[0].ID() + 'loinccodes_searchtype_' + $index() }" /> Starts With
                </label>
            </div>
        </div>
    </div>
    <div class="row row-noborder">
        <label class="col-xs-3">Result Range:</label>
        <div class="col-xs-3" style="padding-left: 0px;">
            <label for="neResultRangeMin" style="font-weight:normal;">Minimum</label>
            <input name="neResultRangeMin" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().ResultRangeMin, min: 0, max: 999.99, decimals: 2, format: 'n2'}" min="0" max="999.99" style="width: 100px;">
        </div>
        <div class="col-xs-3">
            <label for="neResultRangeMax" style="font-weight:normal;">Maximum</label>
            <input name="neResultRangeMax" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().ResultRangeMax, min: 0, max: 999.99, decimals: 2, format: 'n2'}" min="0" max="999.99" style="width: 100px;">
        </div>
    </div>
    <div class="row row-noborder row-no-gutters" style="margin-top:1rem;">
        <label class="col-xs-3" name="lblQualitativeResult" for="cboQualitativeResult" style="padding-top:10px;">Qualitative Result:</label>
        <div class="col-sm-6 form-group">
            <input class="form-control" style="width:250px;" type="text" aria-labelledby="lblQualitativeResult" name="cboQualitativeResult" data-bind="kendoDropDownList: {value: Values().QualitativeResult, dataSource: Dns.Enums.LOINCQualitativeResultTypeTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' }" />
        </div>

    </div>
    <div class="row row-noborder row-no-gutters" style="margin-top:1rem;">
        <label class="col-xs-3" style="padding-top:10px;" name="lblQualitativeModifier" for="cboQualitativeModifier">Result Modifier:</label>
        <div class="col-sm-6 form-group">
            <input class="form-control" type="text" aria-labelledby="lblQualitativeModifier" name="cboQualitativeModifier" data-bind="kendoDropDownList: {value: Values().ResultModifier, dataSource: Dns.Enums.LOINCResultModifierTypeTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' }" style="width: 250px;" />
        </div>
    </div>
</script>
