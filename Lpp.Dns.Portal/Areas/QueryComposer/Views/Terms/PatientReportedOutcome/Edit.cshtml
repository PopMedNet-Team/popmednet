@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.PatientReportedOutcomeID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-10 bold"><h4 class="TermHeader bold">Patient Reported Outcome (PRO)<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-2">
            <button class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-12">
            <label for="txtItemName">Item Name:</label>
            <input id="txtItemName" name="txtItemName" class="form-control" type="text" maxlength="2000" data-bind="value:Values().ItemName" validationmessage="&nbsp;" />
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-12">
            <label for="txtItemResponse">Item Response:</label>
            <input id="txtItemResponse" name="txtItemResponse" class="form-control" maxlength="2000" type="text" data-bind="value:Values().ItemResponse" validationmessage="&nbsp;" />
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-12">
            <div data-bind="patientReportedOutcomeTermValidator: {values: Values(), termValidators: $component.TermValidators}"></div>
        </div>
    </div>
</script>
