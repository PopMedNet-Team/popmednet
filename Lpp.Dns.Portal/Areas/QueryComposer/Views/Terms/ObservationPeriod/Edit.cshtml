@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.ObservationPeriodID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Observation Period<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-3 form-group">
            <label for="dtObservationStart" id="lblObservationStart">Start Period</label>
            <input id="dtObservationStart" class="form-control k-invalid" name="observation_startname" type="date" pattern="\d{2}/\d{1,2}/\d{4}" maxlength="10" minlength="9" validationmessage="Invalid date, use (MM/DD/YYYY)" data-bind="attr: { placeholder: Values().Start() == null ? '(MM/dd/yyyy)' : moment(Values().Start()).format('L') }, kendoDatePicker: { value: Values().Start, format: 'MM/d/yyyy' }" data-format="MM/dd/yyyy" style="width: 100%;" />
            <span class="k-invalid-msg" data-for="observation_startname"></span>
        </div>
        <div class="col-sm-3 form-group">
            <label for="dtObservationEnd" id="lblObservationEnd">End Period</label>
            <input id="dtObservationEnd" class="form-control k-invalid" name="observation_endname" type="date" pattern="\d{2}/\d{1,2}/\d{4}" maxlength="10" minlength="9" validationmessage="Invalid date, use (MM/DD/YYYY)" data-bind="attr: {placeholder: Values().End() == null ? '(MM/dd/yyyy)' : moment(Values().End()).format('L')}, kendoDatePicker: {value: Values().End, format: 'MM/d/yyyy'}" data-format="MM/dd/yyyy" style="width: 100%;" />
            <span class="k-invalid-msg" data-for="observation_endname"></span>
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteObservationPeriod" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
    <span style="font-weight: bold;font-size: 12pt !important;color: #a94442;" data-bind="dateRangeTermValidator: {values: Values(), termValidators: $root.TermValidators}"></span>
</script>