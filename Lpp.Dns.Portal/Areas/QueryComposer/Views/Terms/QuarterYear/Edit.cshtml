@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.QuarterYearID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p> 
    <div class="row">
        <div class="col-sm-4 bold"><h4 class="TermHeader bold">Year/Quarter Observation Period<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>

        <div class="col-sm-4">
            <div class="col-sm-6 form-group">
                <label style="font-size:0.88em;">By Years <input type="radio" value="ByYears" data-bind="attr:{ 'name': 'observationPeriodTypeSelector_' + $index() }, checked: Values().ByYearsOrQuarters" /></label>
            </div>
            <div class="col-sm-6 form-group">
                <label style="font-size:0.88em;text-wrap:avoid;">By Quarters <input type="radio" value="ByQuarters" data-bind="attr:{ 'name': 'observationPeriodTypeSelector_' + $index() }, checked:Values().ByYearsOrQuarters" /></label>
            </div>
            <div class="col-sm-6 form-group">
                <label data-bind="attr:{'for': 'neStartYearQ' + $index() }">Start</label>
                <input maxlength="4" data-bind="attr:{'id': 'neStartYearQ' + $index() }, kendoNumericTextBox: {value: Values().StartYear, min: 1800, max: 9999, decimals: 0, format: '0000'}" style="width: 100px;">
            </div>
            <div class="col-sm-6 form-group">
                <label for="neEndYearQ" data-bind="attr:{'for': 'neEndYearQ' + $index() }">End</label>
                <input maxlength="4" data-bind="attr:{'id': 'neEndYearQ' + $index() }, kendoNumericTextBox: {value: Values().EndYear, min: 1800, max: 9999, decimals: 0, format: '0000'}" style="width: 100px;">
            </div>
            @* only show start and end quarter if the radio button for quarters is selected *@
            <div class="col-sm-6 form-group" data-bind="visible:Values().ByYearsOrQuarters() == 'ByQuarters'" >
                <label data-bind="attr:{'for': 'cbStartQuarter_' + $index() }">Start Quarter</label>
                <div data-bind="attr:{'id': 'cbStartQuarter_' + $index() }, kendoDropDownList: { value: Values().StartQuarter, data: Plugins.Requests.QueryBuilder.MDQ.ViewModel.YearlyQuarters}" style="width: 75%" ></div>
            </div>
            <div class="col-sm-6 form-group" data-bind="visible:Values().ByYearsOrQuarters() == 'ByQuarters'">
                <label data-bind="attr:{'for': 'cbEndQuarter_' + $index() }">End Quarter</label>
                <div data-bind="attr:{'id': 'cbEndQuarter_' + $index() }, kendoDropDownList: { value: Values().EndQuarter, data: Plugins.Requests.QueryBuilder.MDQ.ViewModel.YearlyQuarters }" style="width: 75%" ></div>
            </div>
        </div>        


        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteYears" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>
