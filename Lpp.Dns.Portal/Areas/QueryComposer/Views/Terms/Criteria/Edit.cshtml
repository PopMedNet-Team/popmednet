@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.CriteriaID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-4 bold"><h4 id="lblCriteria" class="TermHeader bold">Output Criteria<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6 form-group">
            <input type="text" aria-labelledby="lblCriteria" id="cboCriteria" name="Criteria" data-bind="kendoDropDownList: {value: Values().Criteria, dataSource: Dns.Enums.OutputCriteriaTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' },attr:{ required: $component.Options.IsTemplateEdit == false }" validationmessage="Output Criteria is required" style="width: 250px;" />
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteCriteriaTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>