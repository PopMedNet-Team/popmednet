@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.HispanicID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p> 
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 id="lblRace" class="TermHeader bold">Hispanic<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6 form-group">
            <input type="text" aria-labelledby="lblHispanic" id="cboHispanic" name="Hispanic" data-bind="kendoDropDownList: {value: Values().Hispanic, dataSource: Dns.Enums.HispanicTranslation, optionLabel:'<Not Selected>', dataTextField: 'text', dataValueField: 'value', index: '-1' },attr:{ required: $root.IsTemplateEdit == false }" validationmessage="Hispanic is required" style="width: 350px;" />
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteHispanicTerm" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>