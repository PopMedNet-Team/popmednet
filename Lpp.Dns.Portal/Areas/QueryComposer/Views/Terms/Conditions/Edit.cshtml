@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.ConditionsID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-3 bold"><h4 id="lblDisease" class="TermHeader bold">Condition<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-5">
            <input type="text" aria-labelledby="lblDisease" id="cboDisease" name="Disease" data-bind="kendoDropDownList: {value: Values().Condition, dataSource: Dns.Enums.ConditionClassificationsTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' },attr:{ required: $root.IsTemplateEdit == false }" validationmessage="Condition is required" style="width: 100%;" />
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteDiseaseTerm" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>