@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.HeightID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Height Range <em data-bind="visible:Design.Locked" style="color:red">*</em><br />(in inches)</h4></div>
        <div class="col-sm-2 form-group">
            <label id="lblHeightMin" for="neHeightMin">Min</label>
            <input id="neHeightMin" name="neHeightMin" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().HeightMin, min: 1, max: 150, decimals: 2, format: 'n2'}" min="1" max="150" style="width: 100px;">
        </div>
        <div class="col-sm-2 form-group">
            <label id="lblHeightMax" for="neHeightMax">Max</label>
            <input id="neHeightMax" name="neHeightMax" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().HeightMax, min: 1, max: 150, decimals: 2, format: 'n2'}" min="1" max="150" style="width: 100px;">
        </div>
        <div class="col-sm-2 col-sm-offset-4">
            <button id="btnDeleteAgeRangeTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>
