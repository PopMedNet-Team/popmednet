@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.PrescribingID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Prescribing<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-8" style="padding-top:10px;">
            <label style="display:inline;">Code Set: RxNorm CUI</label>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
    <div class="row row-noborder">
        <div class="col-sm-12 form-group">
            <label for="txtPrescribingCodes">Selected Codes:</label>
            <textarea id="txtPrescribingCodes" name="txtPrescribingCodes" class="form-control" rows="3" data-bind="value:Values().CodeValues" title="&bull; separate multiple codes using a semi-colon" />
            <div>
                <label class="radio-inline">
                    <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.ExactMatch, checked:Values().SearchMethodType, attr:{ required: $component.Options.IsTemplateEdit == false, name: $parents[0].ID() + 'perscribingcodes_searchtype_' + $index() }" validationmessage="Select a search method type." /> Exact Match
                </label>
                &nbsp;
                <label class="radio-inline">
                    <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.StartsWith, checked:Values().SearchMethodType, attr:{ name: $parents[0].ID() + 'perscribingcodes_searchtype_' + $index() }" /> Starts With
                </label>
            </div>
        </div>
    </div>
</script>
