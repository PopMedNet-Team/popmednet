@using Lpp.QueryComposer

<script type="text/html" id="v_@ModelTermsFactory.DC_Race">
    <br />
    <span class="bold center" style="margin-left:45%;" data-bind="visible:$index() > 0">And</span>
    <div class="row">
        <div class="col-sm-2 bold">Race:</div>
        <div class="col-sm-10">
            <span data-bind="foreach: Values.Races">
                <span data-bind="visible: ($index() > 0)">or</span>
                <span data-bind="visible: $data == 0, text: 'Unknown'"></span>
                <span data-bind="visible: $data == 1, text: 'American Indian/Alaska Native'"></span>
                <span data-bind="visible: $data == 2, text: 'Asian'"></span>
                <span data-bind="visible: $data == 3, text: 'Black/African American'"></span>
                <span data-bind="visible: $data == 4, text: 'Native Hawaiian/Pacific Islander'"></span>
                <span data-bind="visible: $data == 5, text: 'White'"></span>
                <span data-bind="visible: $data == 6, text: 'Missing'"></span>
            </span>
            <span data-bind="visible: Values.Races.length == 0">&lt;None Selected&gt;</span>
        </div>
    </div>
</script>