@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_Race">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-4 bold"><h4 id="Race" class="TermHeader bold">Race<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-4 form-group">
            <div class="checkbox">
                <input type="checkbox" onchange="SelectAll(this, 'AllRaces')" />
                <label class="hover-ibeam" for="SelectAll">Select All</label>
            </div>
            <div style="border-bottom: solid; border-width: 1px; width: 280px; padding-left:0; margin-left:-50px; border-bottom-color: lightgray;"></div>
            <div id="AllRaces">
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="0" id="Unknown" />
                    <label class="hover-ibeam" for="Unknown">Unknown</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="1" id="AmericanIndianOrAlaskaNative" />
                    <label class="hover-ibeam" for="AmericanIndianOrAlaskaNative">American Indian/Alaska Native</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="2" id="Asian" />
                    <label class="hover-ibeam" for="pdxPrinciple">Asian</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="3" id="BlackOrAfricanAmerican" />
                    <label class="hover-ibeam" for="BlackOrAfricanAmerican">Black/African American</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="4" id="NativeHawaiianOrOtherPacificIslander" />
                    <label class="hover-ibeam" for="NativeHawaiianOrOtherPacificIslander">Native Hawaiian/Pacific Islander</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="5" id="White" />
                    <label class="hover-ibeam" for="White">White</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" data-bind="checked: Values().Races" value="6" id="Missing" />
                    <label class="hover-ibeam" for="Missing">Missing</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteRaceTerm" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>

<script type="text/javascript">
    function SelectAll(checker, container) {
        $("#" + container + " div input[type=checkbox]").each(function () {
            if (this.checked != checker.checked)
                $(this).click();
        });
    }
</script>