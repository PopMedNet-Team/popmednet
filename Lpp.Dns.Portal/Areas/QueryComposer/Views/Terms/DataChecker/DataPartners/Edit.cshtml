@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_DataPartners">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-3 bold">
            <h4 id="lblDataPartners" class="TermHeader bold">Data Partners<em data-bind="visible:Design.Locked" style="color:red">*</em></h4>
        </div>
        <div class="col-sm-7 form-group">
            <p class="help-block">At least one Data Partner must be selected to produce valid results.</p>
            <table id="DataPartnerTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>
                            <input type="checkbox" data-bind="CheckAllCheckboxExtender:{valuesCollection:$data.Values().DataPartnersValue, allValues:$component.TermProvider.AvailableOrganizations()}" />
                        </td>
                        <td>Data Partner</td>
                    </tr>
                </thead>
                <tbody data-bind="DataPartnerTypeExtender: '1',foreach: $component.TermProvider.AvailableOrganizations">
                    <tr>
                        <td><input type="checkbox" id="chk" name="chk[]" class="Checkbox" data-bind="value:$data.Acronym, checked: $parent.Values().DataPartnersValue" /></td>
                        <td data-bind="text: $data.Name + ' ('+ $data.Acronym + ')'"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteDataPartnersTerm" class="btn btn-danger pull-right" data-bind="click: $component.onDeleteTermFromCriteria.bind($component, $data, $parent), visible: $component.Options.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
            <label class="design-lock" data-bind="visible: $component.Options.IsTemplateEdit"><input type="checkbox" data-bind="checked: Design.Locked" /> Locked</label>
        </div>
    </div>
</script>