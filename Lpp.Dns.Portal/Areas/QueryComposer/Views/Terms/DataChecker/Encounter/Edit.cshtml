@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.DC_Encounter">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row">
        <div class="col-sm-4 bold"><h4 id="EncounterType" class="TermHeader bold">Encounter Type<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-4 form-group">
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="ALL" id="encounterAll" />
                <label class="hover-ibeam" for="encounterAll">All</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="AV" id="encounterAmbulatoryVisit" />
                <label class="hover-ibeam" for="encounterAmbulatoryVisit">Ambulatory Visit (AV)</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="ED" id="encounterEmergencyDepartment" />
                <label class="hover-ibeam" for="encounterEmergencyDepartment">Emergency Department (ED)</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="IP" id="encounterInpatientHospitalStay" />
                <label class="hover-ibeam" for="encounterInpatientHospitalStay">Inpatient Hospital Stay (IP)</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="IS" id="encounterNonAcuteInstitutionalStay" />
                <label class="hover-ibeam" for="encounterNonAcuteInstitutionalStay">Non-Acute Institutional Stay (IS)</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="OA" id="encounterOther" />
                <label class="hover-ibeam" for="encounterOther">Other Ambulatory Visit (OA)</label>
            </div>
            <div class="checkbox">
                <input type="checkbox" data-bind="checked: Values().Encounters" value="MISSING" id="encounterMissing" />
                <label class="hover-ibeam" for="encounterMissing">Missing</label>
            </div>
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2 form-group">
            <button id="btnDeleteEncounterTypeTerm" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
    
</script>

