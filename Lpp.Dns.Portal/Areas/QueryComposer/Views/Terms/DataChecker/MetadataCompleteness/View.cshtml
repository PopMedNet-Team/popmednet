@using Lpp.QueryComposer

<script type="text/html" id="v_@ModelTermsFactory.DC_MetadataCompleteness">
    <br />
    <span class="bold center" style="margin-left:45%;" data-bind="visible:$index() > 0">And</span>
    <div class="row">
        <div class="col-sm-2 bold">Metadata Completeness:</div>
        <div class="col-sm-10">
            <span data-bind="foreach:Values().MetadataCompletenesses()">
                <span data-bind="visible: $index() > 0">or</span>
                <span data-bind="visible: $data == 0, text: 'Diagnosis'"></span>
                <span data-bind="visible: $data == 1, text: 'Dispensing'"></span>
                <span data-bind="visible: $data == 2, text: 'Encounter'"></span>
                <span data-bind="visible: $data == 3, text: 'Enrollment'"></span>
                <span data-bind="visible: $data == 4, text: 'Procedure'"></span>
            </span>
            <span data-bind="visible: Values().MetadataCompletenesses().length == 0">&lt;None Selected&gt;</span>
        </div>
    </div>
</script>
