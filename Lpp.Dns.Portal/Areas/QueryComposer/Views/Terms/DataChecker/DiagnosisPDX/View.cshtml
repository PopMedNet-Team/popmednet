@using Lpp.QueryComposer

<script type="text/html" id="v_@ModelTermsFactory.DC_DiagnosisPDX">
    <br />
    <span class="bold center" style="margin-left:45%;" data-bind="visible:$index() > 0">And</span>
    <div class="row">
        <div class="col-sm-2 bold">Diagnosis PDX:</div>
        <div class="col-sm-10">
            <span data-bind="foreach:Values().PDXes()">
                <span data-bind="visible: $index() > 0">or</span>
                <span data-bind="visible: $data == 'P', text: 'Principle'"></span>
                <span data-bind="visible: $data == 'S', text: 'Secondary'"></span>
                <span data-bind="visible: $data == 'X', text: 'Other PDX'"></span>
                <span data-bind="visible: $data == 'MISSING', text: 'Missing'"></span>
            </span>
            <span data-bind="visible: Values().PDXes().length == 0">&lt;None Selected&gt;</span>
        </div>
    </div>
</script>
