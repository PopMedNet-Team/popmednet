<?xml version="1.0" encoding="UTF-8"?>
<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>
    <job>
      <name>RequestMetadataCollectionJob</name>
      <group>DNS</group>
      <description>DNS Request Metadata Collection Processing Job</description>
      <job-type>Lpp.Dns.Portal.RequestMetadataCollection.RequestMetadataCollectionJob, Lpp.Dns.Portal.RequestMetadataCollection</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>

    <trigger>
      <simple>
        <name>RequestMetadataCollectionTrigger</name>
        <group>DNS</group>
        <description></description>
        <job-name>RequestMetadataCollectionJob</job-name>
        <job-group>DNS</job-group>
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <repeat-count>-1</repeat-count>
        <repeat-interval>3600000</repeat-interval>
      </simple>
    </trigger>
  </schedule>

</job-scheduling-data>